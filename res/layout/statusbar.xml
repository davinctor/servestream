<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/black" >

    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:contentDescription="" />

    <ImageView
        android:id="@+id/status_bar_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/notification_icon"
        android:visibility="gone"
        android:contentDescription="" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="11dp" >

        <TextView
            android:id="@+id/status_bar_track_name"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="left"
       		android:ellipsize="marquee"
        	android:scrollHorizontally="true"
        	android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_bar_artist_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="left"
       		android:ellipsize="marquee"
        	android:scrollHorizontally="true"
        	android:singleLine="true" />
        	
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_controller"
        android:layout_width="144dip"
        android:layout_height="match_parent" 
        android:background="@null"
        android:orientation="horizontal" >
    
    	<ImageButton
        	android:id="@+id/status_bar_previous"
        	android:layout_width="0dip"
        	android:layout_height="48dip"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:background="@null"
        	android:src="@drawable/btn_player_prev"
        	android:contentDescription="" />

     <ImageButton
        	android:id="@+id/status_bar_play"
        	android:layout_width="0dip"
        	android:layout_height="48dip"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:background="@null"
        	android:contentDescription="" />
    
    	<ImageButton
        	android:id="@+id/status_bar_next"
        	android:layout_width="0dip"
        	android:layout_height="48dip"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:background="@null"
        	android:src="@drawable/btn_player_next"
        	android:contentDescription="" />

    </LinearLayout>
    
</LinearLayout>